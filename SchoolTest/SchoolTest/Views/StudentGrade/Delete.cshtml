@model StudentGrade
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Delete student - grade</h3>

@using (Html.BeginForm("Delete", "StudentGrade"))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(m => m.Id)
	<div>
		<div class="text-center">
			¡Are you sure want to delete the grade <strong>@Model.Grade.Name</strong> - <strong>@Model.Student.Name @Model.Student.LastName</strong>?
		</div>
		<div class="ctas">
			<button type="submit" class="btn btn-sm btn-danger">Delete</button>
			@Html.ActionLink("Cancel", "Index", "StudentGrade", null, new { @class = "btn btn-sm btn-primary" })
		</div>
	</div>
}