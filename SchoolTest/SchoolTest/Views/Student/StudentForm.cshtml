@model StudentFormViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Student.Id == 0)
{
	<h3 class="text-center">
		New Student
	</h3>
}
else
{
	<h3 class="text-center">
		Edit Student
	</h3>
}

@using (Html.BeginForm("Save", "Student"))
{
	@Html.HiddenFor(m => m.Student.Id)
	@Html.AntiForgeryToken();
	<div class="form-group">
		@Html.LabelFor(m => m.Student.Name)
		@Html.TextBoxFor(m => m.Student.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Student.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Student.LastName)
		@Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Student.LastName)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Student.GenreId)
		@Html.DropDownListFor(m => m.Student.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select gender", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Student.GenreId)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Student.Birthday)
		@Html.TextBoxFor(m => m.Student.Birthday, "{0: d MM yyyy}", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Student.Birthday)
	</div>
	<p class="ctas">
		<button type="submit" class="btn btn-success">Save</button>
	</p>
}